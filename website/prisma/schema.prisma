// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model Category {
  id        Int        @id @default(autoincrement())
  name_ar   String     @unique
  name_en   String?
  items     MenuItem[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model MenuItem {
  id             Int      @id @default(autoincrement())
  name_ar        String
  name_en        String?
  description_ar String
  description_en String?
  price          String
  image          String
  rating         Float
  popular        Boolean  @default(false)
  categoryId     Int?
  category       Category? @relation(fields: [categoryId], references: [id])
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model Branch {
  id         Int      @id @default(autoincrement())
  city_ar    String
  city_en    String?
  name_ar    String
  name_en    String?
  address_ar String
  address_en String?
  link       String
  phone      String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model City {
  id        Int      @id @default(autoincrement())
  name_ar   String   @unique
  name_en   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model JobApplication {
  id        Int      @id @default(autoincrement())
  name      String
  phone     String
  email     String
  city      String
  position  String
  cvUrl     String?
  status    String   @default("New")
  createdAt DateTime @default(now())
}

model Admin {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
}

model HeroMedia {
  id        Int      @id @default(autoincrement())
  url       String
  type      String   // 'image' or 'video'
  isActive  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model FranchiseRequest {
  id              Int      @id @default(autoincrement())
  name            String
  phone           String
  email           String
  city            String
  budget          String
  hasExperience   Boolean
  status          String   @default("New")
  createdAt       DateTime @default(now())
}


model AboutCarousel {
  id        Int      @id @default(autoincrement())
  image     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model AboutStaticImage {
  id        Int      @id @default(autoincrement())
  image     String
  position  Int      @unique // 1 or 2
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model AppPromo {
  id              Int      @id @default(autoincrement())
  title_ar        String   @db.Text
  title_en        String?  @db.Text
  subtitle_ar     String   @db.Text
  subtitle_en     String?  @db.Text
  description_ar  String   @db.Text
  description_en  String?  @db.Text
  appStoreLink    String   @default("#")
  googlePlayLink  String   @default("#")
  phoneImage      String
  backgroundImage String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}
